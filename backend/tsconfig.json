{
    "compilerOptions": {
        "target": "es2016",
        "strictNullChecks": true,
        "module": "commonJS",
        "outDir": "./build",
        "moduleResolution": "Node",
        "noImplicitAny": true,
        "sourceMap": true,
        "noImplicitThis": true,
        "lib": [
            "es2017"
        ]
    },
    "include": [
        "ts/**/*",
        "ts/node_modules"
    ],
    "exclude": [
        "build"
    ],
    "compileOnSave": true
}